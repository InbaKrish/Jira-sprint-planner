// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "JIRA Sprint planner",

	// Path to the DockerCompose file
	"dockerComposeFile": "../docker-compose.yml",

	// Service for the VScode to map
	"service": "jsp-web",

	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		// Git support for the VSCode dev-container
		"ghcr.io/devcontainers/features/git:1": {
            "version": "latest"
        },

		// Terminal of choice for the VSCode dev-conatiner terminal
		"ghcr.io/meaningful-ooo/devcontainer-features/fish:1": {}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Uncomment the next line to run commands after the container is created.
	// "postCreateCommand": "cat /etc/os-release",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"Shopify.ruby-lsp",
				"orepor.color-tabs-vscode-ext",
				"bierner.color-info",
				"kaiwood.endwise",
				"Hridoy.rails-snippets",
				"vortizhe.simple-ruby-erb",
				"aki77.rails-db-schema",
				"eamodio.gitlens",
				// "xyz.local-history",
				"shardulm94.trailing-spaces",
				"aliariff.vscode-erb-beautify",
				"GitHub.copilot",
				"Anjali.clipboard-history",
				// "Blinknlights.fuzzy-ruby-server",
				"LoranKloeze.ruby-rubocop-revived"
			],

			// VSCode terminal setting config
			"settings": {
				"terminal.integrated.defaultProfile.linux": "fish"
			}
		}
	},

	// UncXomment to connect as an existing user other than the container default. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "rently",

	"workspaceFolder": "/rails",
	"shutdownAction": "stopCompose"
}